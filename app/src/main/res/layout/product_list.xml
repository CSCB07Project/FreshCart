<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_store_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable= "true"
    android:layout_margin="15dp">




    <androidx.cardview.widget.CardView
        android:clickable="true"
        android:id="@+id/cardView_store"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:translationY="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="2dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/pd_banner_seller"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:layout_margin="15dp"

            android:elevation="26dp"
            android:scaleType="fitXY"
            android:src="@drawable/samplegrocerystore"

            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/edit_db"
        android:layout_width="25dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="130dp"
        android:layout_marginVertical="20dp"
        android:layout_marginBottom="20dp"

        android:elevation="26dp"
        android:text="Edit"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/productname_dashseller"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="30dp"
        android:elevation="26dp"
        android:fontFamily="@font/robotomedium"
        android:text="Name"
        android:textSize="20sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/store_db_info_seller"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/store_db_info_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:elevation="26dp"
        android:text="$-1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

