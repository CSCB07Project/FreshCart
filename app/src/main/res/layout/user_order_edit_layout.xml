<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/orderIdTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Bottom sheet"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/user_order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:text="Summary"
        android:textColor="@color/black"
        android:textSize="19sp" />
    <TextView
        android:id="@+id/user_order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:text="Summary"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        android:fontFamily="@font/robottobold"
        android:text="status"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/user_cancel_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Order"
        android:textColor="@color/design_default_color_error" />


</LinearLayout>